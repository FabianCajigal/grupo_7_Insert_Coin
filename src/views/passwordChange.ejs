<%- include('./partials/head') %>

<%- include('./partials/header') %>

<main>

    <section>

        <article class="title">
            <h2>Cambiar contraseña</h2>
        </article>

        <article class="form">
            <form action="/" method="post" class="create-form">

                <div class="form-control">
                    <label for="password">Nueva contraseña</label>
                    <input type="password" name="password" id="password" class="control" required>
                </div>

                <div class="form-control">
                    <label for="password-confirm">Confirmar nueva contraseña</label>
                    <input type="password" name="password-confirm" id="password-confirm" class="control" required>
                </div>
                
                <button type="submit">CAMBIAR CONTRASEÑA</button>

            </form>
        </article>

    </section>

</main>

<%- include('./partials/footer') %>