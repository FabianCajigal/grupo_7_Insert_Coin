<%- include('./partials/head', { stylesheet: "passwordChange" }) %>

<%- include('./partials/header') %>

<main>

    <section>

        <article class="title">
            <h2>Cambiar contraseña</h2>
        </article>

        <article class="form">
            <form action="/account/password-change?_method=PUT" method="post" class="create-form">

                <div class="form-control">
                    <label for="oldPassword">Contraseña anterior</label>
                    <input type="password" name="oldPassword" id="oldPassword" class="control" required>
                    <small class="text-danger" id="oldPasswordError"></small>
                </div>

                <div class="form-control">
                    <label for="password">Nueva contraseña</label>
                    <input type="password" name="password" id="password" class="control" required>
                    <small class="text-danger" id="passwordError"></small>
                </div>

                <div class="form-control">
                    <label for="password-confirm">Confirmar nueva contraseña</label>
                    <input type="password" name="passwordConfirm" id="passwordConfirm" class="control" required>
                    <small class="text-danger" id="passwordConfirmError"></small>
                </div>
                
                <button type="submit">CAMBIAR CONTRASEÑA</button>

            </form>
        </article>

    </section>

</main>

<script src="/js/passwordChangeValidator.js"></script>

<%- include('./partials/footer') %>