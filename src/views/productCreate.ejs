<%- include('./partials/head') %>

<%- include('./partials/header') %>

<main>

    <section>

        <article class="title">
            <h2>Crear cuenta</h2>
        </article>

        <article class="form">
            <form action="/" method="post" class="create-form">

                <div class="form-control">
                    <label for="productname">Nombre del producto</label>
                    <input type="text" name="productname" id="productname" class="control" required>
                </div>

                <div class="form-control">
                    <label for="detail">Detalle</label>
                    <input type="text" name="detail" id="detail" class="control" required>
                </div>

                <div class="form-control">
                    <label for="price">Precio</label>
                    <input type="text" name="price" id="price" class="control" required>
                </div>
                
                <div class="form-control">
                    <label for="discount">Descuento</label>
                    <input type="text" name="discount" id="discount" class="control" required>
                </div>

                <div class="form-control">
                    <label for="picture">Imagen</label>
                    <input type="file" name="picture" id="picture" class="control-picture" required>
                </div>

                <div class="form-control">
                    <label for="product type">Tipo de producto</label><br>
                    <input type="radio" name="product type" id="Hardware" class="product-type">Hardware<br>
                    <input type="radio" name="product type" id="Computadoras" class="product-type">Computadoras<br>
                    <input type="radio" name="product type" id="Notebooks" class="product-type">Notebooks<br>
                    <input type="radio" name="product type" id="Perfiféricos" class="product-type">Periféricos<br>
                    <input type="radio" name="product type" id="Consolas" class="product-type">Consolas<br>
                    <input type="radio" name="product type" id="Videojuegos" class="product-type">Videojuegos<br>
                </div>

                <button type="submit">SUBIR</button>

            </form>
        </article>

    </section>

</main>

<%- include('./partials/footer') %>