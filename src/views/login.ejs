<%- include('./partials/head', { stylesheet: "login" }) %>

<%- include('./partials/header') %>


<main> 
    <section>

        <article class="title">
            <h2>Iniciar sesión</h2>
        </article>

        <article class="form">
            <form action="/account/login" method="post" class="create-form">             
            <div>
                <label for="username">Usuario</label>
                <input type="text" name="username" id="username" class="control" placeholder="Indique su usuario" required>
                <small class="text-danger" id="usernameError"></small>
            </div>
            <br>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" class="control" placeholder="Indique su contraseña" required>
                <small class="text-danger" id="passwordError"></small>
            </div>
            <div class="form-control">
                <label class="checkbox" for="rememberMe"><input type="checkbox" name="rememberMe" id="rememberMe" class="checkbox-control"> Recordar usuario</label>
            </div>
            <% if(locals.errors && errors.credentials) { %>
                <small class="text-danger"> <%= errors.credentials.msg %> </small>
            <% } %>
            <button type="submit" value="INGRESAR">INGRESAR</button>
            <br>         
            <a href="/account/register"><button type="button" value="REGISTRATE">REGISTRARSE</button></a>
            </form>
        </article>

    </section>
</main>

<script src="/js/loginValidator.js"></script>

<%- include('./partials/footer') %>

